{
  "manifest_version": 3,
  "name": "SJTU Grade Viewer",
  "version": "1.0",
  "description": "Displays grade information from SJTU student system",
  "permissions": [
    "webRequest",
    "storage",
    "action"
  ],
  "host_permissions": [
    "*://*.sjtu.edu.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.sjtu.edu.cn/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 